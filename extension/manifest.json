{
  "manifest_version": 3,
  "name": "Portico",
  "version": "0.1.0",
  "description": "A local-first customizable new tab page.",
  "icons": {
    "16": "icons/portico-16.png",
    "32": "icons/portico-32.png",
    "48": "icons/portico-48.png",
    "128": "icons/portico-128.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": [
    "geolocation"
  ],
  "host_permissions": [
    "https://api.open-meteo.com/*",
    "https://geocoding-api.open-meteo.com/*"
  ]
}
